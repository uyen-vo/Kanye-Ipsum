<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.spellmaus.kanyeipsum.MainActivity"
    tools:showIn="@layout/activity_main"
    android:clickable="false">

    <CheckBox
        android:text="All Caps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox2"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/scroller"
        android:layout_alignStart="@+id/scroller"
        android:layout_marginTop="14dp"
        style="@style/Widget.AppCompat.CompoundButton.CheckBox"
        android:buttonTint="@color/colorPrimary"
        android:checked="false"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:fontFamily="sans-serif-condensed"
        android:textSize="14sp"
        android:textAllCaps="true"
        android:onClick = "onCapsClicked"/>

    <CheckBox
        android:text="Paragraph Tags"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox"
        style="@style/Widget.AppCompat.CompoundButton.CheckBox"
        android:buttonTint="@color/colorPrimary"
        android:checked="false"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:fontFamily="sans-serif-condensed"
        android:textSize="14sp"
        android:textAllCaps="true"
        android:layout_alignBaseline="@+id/checkBox2"
        android:layout_alignBottom="@+id/checkBox2"
        android:layout_alignRight="@+id/scroller"
        android:layout_alignEnd="@+id/scroller"
        android:onClick="onParaTagClicked"/>

    <Button
        android:text="Generate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:onClick="clickGen"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/scroller"
        android:layout_alignStart="@+id/scroller" />

    <ScrollView
        android:id="@+id/scroller"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/checkBox2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:layout_above="@+id/numField">

        <TextView
            android:id="@+id/scroll_content"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:textIsSelectable="true"
            android:textColor="@color/colorPrimaryDark"
            android:typeface="monospace"
            android:fontFamily="monospace"
            android:inputType="none"
            android:textSize="14sp"
            />
    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:srcCompat="@color/colorAccent"
        app:fabSize="mini"
        android:layout_below="@+id/numField"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/numField"
        android:layout_above="@+id/button2"
        android:layout_alignRight="@+id/scroller"
        android:layout_alignEnd="@+id/scroller"
/>

    <TextSwitcher
        android:id="@+id/paraOrSent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/numField"
        android:layout_alignLeft="@+id/scroller"
        android:layout_alignStart="@+id/scroller"
        android:layout_above="@+id/button2"
        android:layout_toLeftOf="@+id/numField"
        android:layout_toStartOf="@+id/numField"
        android:clickable="true" />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:srcCompat="@color/colorAccent"
        app:fabSize="mini"
        android:layout_below="@+id/numField"
        android:layout_alignRight="@+id/numField"
        android:layout_alignEnd="@+id/numField" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:srcCompat="@color/colorAccent"
        app:fabSize="mini"
        android:layout_below="@+id/numField"
        android:layout_toLeftOf="@+id/floatingActionButton3"
        android:layout_toStartOf="@+id/floatingActionButton3"
        android:layout_marginRight="22dp"
        android:layout_marginEnd="22dp" />

</RelativeLayout>
